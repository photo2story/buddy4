{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate and Run Main",
            "type": "process",
            "command": "cmd",
            "args": ["/c", "${workspaceFolder}/myenv/Scripts/activate && python ${workspaceFolder}/main.py"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
