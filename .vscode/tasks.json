{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate Virtual Environment and Run Main Script",
            "type": "process",
            "command": "powershell.exe",
            "args": ["-Command", "& { .\\myenv\\Scripts\\Activate; python .\\main.py }"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}
